<%= semantic_form_for [:admin, @program] do |f| %>

  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :active, as: :radio %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            admin_programs_path, :class => 'btn btn-default' %>
  <% end %>

<% end %>
