<%= semantic_form_for [:admin, @group] do |f| %>
  <%= f.error_messages %>

  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :projects, collection: Project.is_active.map{|x| [x.full_name, x.id]}.sort_by{|x| x[0]}, multiple: true %>
    <%= f.input :active, :as => :radio %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              admin_groups_path, :class => 'btn btn-default' %>
  <% end %>

<% end %>
