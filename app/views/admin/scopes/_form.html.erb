<%= semantic_form_for [:admin, @scope] do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :sort_order, as: :number %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              admin_scopes_path, :class => 'btn btn-default' %>
  <% end %>
<% end %>
