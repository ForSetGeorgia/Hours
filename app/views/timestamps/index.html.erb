<%- model_class = Timestamp -%>
<div class="page-header">
  <h1>
    All My <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <% if current_user.role?(User::ROLES[:admin]) %>
      <% if params[:everyone].present? && params[:everyone].to_bool == true %>
        <%= link_to "View Your Timestamps", params.merge(everyone: nil), :class => 'btn btn-info' %>
      <% else %>
        <%= link_to "View Everyone's Timestamps", params.merge(everyone: true), :class => 'btn btn-info' %>
      <% end %>
    <% end %>
  </h1>
</div>

<%= form_tag timestamps_path, method: 'get' do %>
  <div class="row" id="date-pickers">
    <div class="col-xs-3">
      <%= label_tag :timestamp_start_at, 'Start Date' %>
      <%= text_field_tag :timestamp_start_at, params[:timestamp_start_at], size: 14 %>
    </div>
    <div class="col-xs-3">
      <%= label_tag :timestamp_end_at, 'End Date' %>
      <%= text_field_tag :timestamp_end_at, params[:timestamp_end_at], size: 14 %>
    </div>
    <div class="col-xs-3">
      <%= submit_tag 'Get Timestamps', class: 'btn btn-default btn-sm' %>
    </div>
  </div>
<% end %>



<div id="daily-chart" style="min-height: 500px; margin: 0 auto"></div>

<%= render :partial => 'timestamps/table' %>
